{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<h1>Recherche</h1>

		<div class="form-row align-items-end">
			{{ form_start(form) }}
			<div class="col">
				{{ form_row(form.description) }}
			</div>
		</div>

		<div class="col">
			<div class="form-group">
				<button type="submit" class="btn btn-success mt-5">Rechercher</button>
			</div>
			{{ form_end(form) }}
		</div>
		<div
			class="row">
			<!-- Immeuble -->
			{% for immeuble in immeubles %}
				<div class="card w-25 m-5">
					<img src="https://picsum.photos/200/200" class="img-fluid" alt="Image de l'immeuble">
					<div class="card-body">
						<h4 class="card-title"></h4>
						<p class="card-text">{{ immeuble.description }}</p>
						<a href="{{ path('immeubles_detail', {'id': immeuble.id}) }}" class="btn btn-primary btn-sm">DÃ©tail</a>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
{% endblock %}
