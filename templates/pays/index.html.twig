{% extends 'base.html.twig' %}

{% block title %}Pays index
{% endblock %}

{% block body %}
	<h1>Pays index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>IDPays</th>
				<th>Libelle</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for pay in pays %}
				<tr>
					<td>{{ pay.IDPays }}</td>
					<td>{{ pay.Libelle }}</td>
					<td>
						<a href="{{ path('pays_show', {'IDPays': pay.IDPays}) }}">show</a>
						<a href="{{ path('pays_edit', {'IDPays': pay.IDPays}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('pays_new') }}">Create new</a>
{% endblock %}
