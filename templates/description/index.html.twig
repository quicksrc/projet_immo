{% extends 'base.html.twig' %}

{% block title %}Description
{% endblock %}

{% block body %}
	<h1>Description</h1>
	<button id="toolbar" class="btn btn-l btn-light no-print me-2 mb-2" type="button">
		<a href="{{ path('description_new') }}">
			<i class="bi bi-file-earmark-plus"></i>
		</a>
	</button>
	{# <table class="table"> #}
	<table style="width:70%" data-pagination="true" data-toolbar="#toolbar" data-page-size="15" data-search="true" data-show-export="false" data-toggle="table" data-click-to-select="true" data-search-align="left" data-show-columns="false" data-show-print="false" class="table table-list table-bordered table-striped m-auto">
		<thead>
			<tr>
				<th>IDDescription</th>
				<th>Libelle</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for description in descriptions %}
				<tr>
					<td>{{ description.IDDescription }}</td>
					<td>{{ description.Libelle }}</td>
					<td>
						{# <a href="{{ path('description_show', {'IDDescription': description.IDDescription}) }}">show</a> #}
						<a href="{{ path('description_edit', {'IDDescription': description.IDDescription}) }}">
							<i class="bi bi-pen" style="margin-right:10px"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# <a href="{{ path('description_new') }}">Create new</a> #}
{% endblock %}
