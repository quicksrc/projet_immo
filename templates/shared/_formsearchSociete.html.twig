<div class="flex justify-content-center  m-auto">
	{% include 'shared/_btnreturn.html.twig' %}
	<h1>Recherche Sociétés</h1>
	<div class="row">
		<div class="col-2 mt-4">
			<div class="list-group" id="list-tab" role="tablist">
				<a class="list-group-item list-group-item-action active" id="list-societe-list" data-toggle="list" href="#list-societe" role="tab" aria-controls="societe">Société</a>
				<a class="list-group-item list-group-item-action" id="list-contact-list" data-toggle="list" href="#list-contact" role="tab" aria-controls="contact">Contact</a>
				<a class="list-group-item list-group-item-action" id="list-activite-list" data-toggle="list" href="#list-activite" role="tab" aria-controls="activite">Activité</a>
			</div>
		</div>
		<div class="col-9 card pb-2">
			<div class="tab-content" id="nav-tabContent">
				<div class="tab-pane fade show active" id="list-societe" role="tabpanel" aria-labelledby="list-societe-list">
					{{ form_start(form) }}
					<div class="row mt-4">
						<div class="row form-group align-items-end">
							<div class="col-6 ">
								{{ form_label(form.etatDossier) }}
								{{ form_widget(form.etatDossier) }}
							</div>
							<div class="col-6">
								{{ form_label(form.responsable) }}
								{{ form_widget(form.responsable) }}
							</div>
						</div>
						<div class="row">
							<div class="col-6 justify-content-center">
								{{ form_label(form.origineContact) }}
								{{ form_widget(form.origineContact) }}
							</div>
						</div>
						<div class="row">
							<h3 class="text-white bg-primary mt-4 mb-4">Renseignements société vendeuse</h3>
							<div class="col-6">
								{{ form_label(form.raisonSocialeVendeur) }}
								{{ form_widget(form.raisonSocialeVendeur) }}
							</div>
							<div class="col-6">
								{{ form_label(form.cpVendeur) }}
								{{ form_widget(form.cpVendeur) }}
							</div>
						</div>
						<div class="row">
							<h3 class="text-white bg-primary mt-4 mb-4">Renseignements société acheteuse</h3>
							<div class="col-6">
								{{ form_label(form.raisonSocialeAcheteur) }}
								{{ form_widget(form.raisonSocialeAcheteur) }}
							</div>
							<div class="col-6">
								{{ form_label(form.cpAcheteur) }}
								{{ form_widget(form.cpAcheteur) }}
							</div>
						</div>
					</div>
					<div class="row mt-4">
						<div class="col">
							<div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
								{{ form_widget(form.rechercheSociete) }}
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane fade" id="list-contact" role="tabpanel" aria-labelledby="list-societe-list">
					<div class="row">
						<div class="row align-items-end">
							<div class="col-4">
								{{ form_label(form.civiliteContact) }}
								{{ form_widget(form.civiliteContact) }}
							</div>
							<div class="col-4">
								{{ form_label(form.nomContact) }}
								{{ form_widget(form.nomContact) }}
							</div>
							<div class="col-4">
								{{ form_label(form.prenomContact) }}
								{{ form_widget(form.prenomContact) }}
							</div>
						</div>
						<div class="row mt-1">
							<div class="col">
								{{ form_label(form.adresseContact) }}
								{{ form_widget(form.adresseContact) }}
							</div>
						</div>
						<div class="row mt-1">
							<div class="col-6">
								{{ form_label(form.cpContact) }}
								{{ form_widget(form.cpContact) }}
							</div>
							<div class="col-6">
								{{ form_label(form.villeContact) }}
								{{ form_widget(form.villeContact) }}
							</div>
						</div>
						<div class="row mt-2">
							<div class="col-6 justify-content-center">
								{{ form_label(form.fonctionContact) }}
								{{ form_widget(form.fonctionContact) }}
							</div>
							<div class="col-2">
								{{ form_label(form.antiMailingContact) }}
								{{ form_widget(form.antiMailingContact) }}
							</div>
							<div class="col-2">
								{{ form_label(form.npaiContact) }}
								{{ form_widget(form.npaiContact) }}
							</div>
							<div class="col-2">
								{{ form_label(form.principalContact) }}
								{{ form_widget(form.principalContact) }}
							</div>
						</div>
						<div class="row mt-1">
							<div class="col-6">
								{{ form_label(form.correspondantContact) }}
								{{ form_widget(form.correspondantContact) }}
							</div>
							<div class="col-6">
								{{ form_label(form.societeContact) }}
								{{ form_widget(form.societeContact) }}
							</div>
						</div>
						<div class="row mt-1">
							<div class="col-6">
								{{ form_label(form.activiteContact) }}
								{{ form_widget(form.activiteContact) }}
							</div>
							<div class="col-6">
								{{ form_label(form.rcsContact) }}
								{{ form_widget(form.rcsContact) }}
							</div>
						</div>
						<div class="row mt-4">
							<div class="col">
								<div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
									{{ form_widget(form.rechercheContact) }}
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane fade" id="list-activite" role="tabpanel" aria-labelledby="list-activite-list">
					<div class="row">
						<div class="row mt-4">
							<div class="col-4">
								{{ form_label(form.dateActivite) }}
								{{ form_widget(form.dateActivite) }}
							</div>
							<div class="col-4">
								{{ form_label(form.themeActivite) }}
								{{ form_widget(form.themeActivite) }}
							</div>
							<div class="col-4">
								{{ form_label(form.actionActivite) }}
								{{ form_widget(form.actionActivite) }}
							</div>
						</div>
						<div class="row mt-2">
							<div class="col">
								{{ form_label(form.commentaireActivite) }}
								{{ form_widget(form.commentaireActivite) }}
							</div>
						</div>
					</div>
					<div class="row mt-4">
						<div class="col">
							<div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
								{{ form_widget(form.rechercheActivite) }}
							</div>
						</div>
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
